<h1>To Do List</h1>

<h3>Tasks to do:</h3>
<ul>
  <% @not_done_tasks.each do |task| %>
    <li><a href="/tasks/<%=task.id%>">Task: <%=task.description%></a>
      <ul>
        <li>Due Date: <%=task.due_date%></li>
        <li>Priority: <%=task.priority%></li>
      </ul>
      <form action="/tasks/<%= task.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="description" type="hidden" value="<%= task.description%>">
        <input name="due_date" type="hidden" value="<%= task.due_date%>">
        <input name="priority" type="hidden" value=<%= task.priority%>>
        <input name="done?" type="hidden" value=true>
        <button>Mark Completed</button>
      </form>
      <br>
    </li>
  <% end %>
</ul>

<form action="tasks/new" method="get">
  <button>Create a new task</button>
</form>

<h3>Here are your completed tasks:</h3>
<ul>
  <% @done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>">Task: <%=task.description %></a></li>
  <% end %>
</ul>


